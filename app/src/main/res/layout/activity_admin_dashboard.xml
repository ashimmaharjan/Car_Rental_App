<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.AdminDashboard"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/car"/>

            <Button
                android:id="@+id/manageCars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="manage cars"
                style="@style/buttons"
                android:textStyle="bold"
                android:background="@drawable/btn_style"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/manage_users"/>

            <Button
                android:id="@+id/manageUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANAGE USERS"
                style="@style/buttons"
                android:textStyle="bold"
                android:background="@drawable/btn_style"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:src="@drawable/manage" />

            <Button
                android:id="@+id/manageBookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANAGE BOOKINGS"
                style="@style/buttons"
                android:textStyle="bold"
                android:background="@drawable/btn_style"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>