<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carrental">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".UserNavigationDrawer"
            android:label="@string/title_activity_user_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Controllers.BroadcastActivity" />
        <activity android:name=".Controllers.UpdateDeleteCar" />
        <activity android:name=".Controllers.DisplayClickedCar" />
        <activity android:name=".Controllers.AdminDashboard" />
        <activity android:name=".Controllers.AddCar" />
        <activity android:name=".Controllers.Manage_Cars" />
        <activity android:name=".Controllers.Register" />
        <activity android:name=".Controllers.MainActivity" />
        <activity android:name=".Controllers.Login" />
        <activity
            android:name=".Controllers.SplashScreen"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>